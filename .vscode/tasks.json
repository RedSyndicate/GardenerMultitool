{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}\\GardenersMultitool.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}\\GardenersMultitool.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}\\GardenersMultitool.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Docker Build API",
            "type": "shell",
            "command": "docker build --pull --rm -f \"Dockerfile\" -t gardenersmultitool-api:latest \".\"",
            "problemMatcher": []
        },
        {
            "label": "Docker Build Client",
            "type": "shell",
            "command": "docker build --pull --rm -f \"GardenersMultitool.Client\\Dockerfile\" -t gardenersmultitool:latest \"GardenersMultitool.Client\"",
            "problemMatcher": []
        }
    ]
}